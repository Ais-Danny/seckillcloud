<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weiran.manage.mapper.uaa.RuleMapper">

    <resultMap id="ruleResultMap" type="com.weiran.manage.entity.uaa.Rule">
        <result column="id" property="id"/>
        <result column="exceed_year" property="exceedYear"/>
        <result column="exceed_count" property="exceedCount"/>
        <result column="exceed_money" property="exceedMoney"/>
        <result column="exceed_day" property="exceedDay"/>
        <result column="limit_age" property="limitAge"/>
    </resultMap>

    <!--查询全部-->
    <select id="findRule" resultMap="ruleResultMap">
        select id,exceed_year,exceed_count,exceed_money,exceed_day,limit_age
        from rule
    </select>
    
    <!--通过更新rule-->
    <update id="update">
        UPDATE rule
        SET exceed_year = #{rule.exceedYear},
            exceed_count  = #{rule.exceedCount},
            exceed_money  = #{rule.exceedMoney},
            exceed_day = #{rule.exceedDay},
            limit_age = #{rule.limitAge}
        WHERE id = #{rule.id}
    </update>

</mapper>