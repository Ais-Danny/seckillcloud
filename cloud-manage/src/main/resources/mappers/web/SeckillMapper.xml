<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.weiran.manage.mapper.web.SeckillMapper">

    <resultMap id="seckillResultMap" type="com.weiran.manage.entity.web.SeckillGoods">
        <result column="id" property="id"/>
        <result column="goods_id" property="goodsId"/>
        <result column="stock_count" property="stockCount"/>
    </resultMap>

    <!--查询全部-->
    <select id="findSeckill" resultMap="seckillResultMap">
        select *
        from seckill_goods
    </select>

    <!--通过goodsId模糊查询-->
    <select id="findByGoodsIdLike" resultMap="seckillResultMap">
        select * from seckill_goods where goods_id LIKE CONCAT(CONCAT('%', #{goodsId}), '%')
    </select>

    <!--新增-->
    <insert id="add" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO seckill_goods (goods_id,stock_count)
        VALUES (#{seckillGoods.goodsId},
                #{seckillGoods.stockCount});
    </insert>

    <!--删除-->
    <delete id="delete">
        delete
        from seckill_goods
        where goods_id = #{goodsId}
    </delete>

    <!--更新-->
    <update id="update">
        UPDATE seckill_goods
        SET stock_count  = #{seckillGoods.stockCount}
        WHERE goods_id = #{seckillGoods.goodsId}
    </update>

</mapper>